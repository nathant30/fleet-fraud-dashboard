# Environment
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration - Choose one approach:
# Option 1: Use Supabase (PostgreSQL hosted)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Option 2: Use local SQLite for development
# DB_TYPE=sqlite
# SQLITE_DB_PATH=./database/fleet_fraud.db

# Option 3: Use direct PostgreSQL connection
DB_TYPE=postgresql
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Fraud Detection Thresholds
FRAUD_THRESHOLD_SPEED=120
FRAUD_THRESHOLD_FUEL_EFFICIENCY=5
FRAUD_THRESHOLD_ROUTE_DEVIATION=0.5
FRAUD_ALERT_EMAIL=admin@yourcompany.com

# Monitoring
MONITORING_INTERVAL=60000
ALERT_COOLDOWN=300000